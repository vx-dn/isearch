# Development Environment Configuration
# Copy this to .env and modify the values as needed

# === AWS Configuration ===
AWS_REGION=ap-southeast-1
# For development, you can use localstack or actual AWS credentials
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key

# === DynamoDB Tables ===
RECEIPTS_TABLE_NAME=receipt-search-receipts-dev
USERS_TABLE_NAME=receipt-search-users-dev

# === S3 Configuration ===
S3_BUCKET_NAME=receipt-search-images-dev

# === Application Configuration ===
PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# === JWT Configuration (Development only) ===
JWT_SECRET_KEY=development-secret-key-change-in-production
JWT_ALGORITHM=HS256

# === Optional Services (Comment out if not available) ===
# COGNITO_USER_POOL_ID=ap-southeast-1_XXXXXXXXX
# COGNITO_CLIENT_ID=your-client-id
# COGNITO_CLIENT_SECRET=your-client-secret

# MEILISEARCH_HOST=http://localhost:7700
# MEILISEARCH_API_KEY=your-meilisearch-api-key
# MEILISEARCH_INDEX_NAME=receipts
